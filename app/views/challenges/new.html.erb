<div class="columns is-centered">
  <div class="column is-half">
    <p class="row is-uppercase has-text-weight-bold is-size-4 py-2">New Challenge</p>
    <div class="row">
        <%= form_with model: @challenge, id: "challenge_form", url: challenge_path, method: :post do |f| %>
          <div class="field">
            <p class="control">
              <%= f.label :title, class: "label" %>
              <%= f.text_field :title, autofocus: true, class: "input", placeholder: "Title" %>
            </p>
          </div>

          <div class="field">
            <p class="control">
              <%= f.label :description, class: "label" %>
              <%= f.text_area :description, class: "textarea", placeholder: "Description" %>
            </p>
          </div>

          <div class="field">
            <p class="control">
              <%= f.label :tags, class: "label" %>
            <div class="tags" id="tag-chips"></div>
            <%= f.hidden_field :tags, value: "" %>
            <input type="search" id="tags-search" class="input" placeholder="Tags">
            </p>
          </div>

          <div class="field">
            <p class="control">
              <%= f.submit class: "button is-primary" %>
            </p>
          </div>
        <% end %>
    </div>
    </div>
</div>

<%= javascript_pack_tag 'challenges', 'data-turbolinks-track': 'reload' %>
